@import "nib"

color-accent = #245DF6
color-text = #222
typeface = "Helvetica Neue", sans-serif

body
  width 300px
  margin 0 8px
  box-sizing border-box
  font-smoothing antialiased

.search
  width 100%
  padding 8px
  margin 8px 0 4px
  color color-text
  background #fcfcfc
  border 1px solid #ccc
  border-radius 3px
  box-shadow inset 0 1px 1px rgba(0,0,0,0.07)
  font 400 14px typeface
  font-smoothing antialiased
  
  &:hover
    background #fff

  &:focus
    outline none
    background #fff
    border-color #b3b3b3

.tabs
  padding 6px 0 8px
  margin 0
  width 100%
  max-height 450px
  overflow-x hidden
  overflow-y scroll

  &::before
    content ""
    display block
    width 300px
    height 6px
    position fixed
    top 46px
    left 8px
    background-image linear-gradient(rgba(255,255,255,1), rgba(255,255,255,0))
    z-index 1

  &::after
    content ""
    display block
    width 300px
    height 8px
    position fixed
    bottom 0
    left 8px
    background-image linear-gradient(rgba(255,255,255,0), rgba(255,255,255,1))

  &::-webkit-scrollbar
    display none

  li
    color color-text
    height 36px
    position relative
    display flex
    flex-direction row
    align-items center
    
    &.active
      color color-accent

    &.selected
      cursor pointer
      color #fff
      background color-accent
      border-radius 3px

      .delete
        visibility visible
        
  .sortable-placeholder
    background #efefef
    border-radius 3px

  .favicon
    width 16px
    height 16px
    margin 0 10px
    
    img
      width 16px
      height 16px
      
    &.favicon-placeholder
      background rgba(204, 204, 204, 0.5)
      border-radius 3px

  h1
    margin 0
    font 400 14px typeface
    width 254px
    white-space nowrap
    overflow hidden
    text-overflow ellipsis

  .delete
    width 16px
    height 16px
    margin 0 0 0 10px
    visibility hidden
    padding 10px 10px 10px 16px
    border-radius 0 3px 3px 0
    background-image linear-gradient(90deg, rgba(0,0,0, 0) ,color-accent 50%)
    position absolute
    right 0

    &:hover svg
      opacity 0.6

    svg
      fill #fff
      transition opacity 0.3s

  .deleted
    background red
    margin-left -20px

.no-matches
  text-align center
  margin 14px 0 18px
  font 400 14px typeface
  color lighten(color-text, 50%)
